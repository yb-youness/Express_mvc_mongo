{{!-- Alert Boxs   --}}
  {{#if msg}}
     <div class="alert alert-dismissible alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
   <p>{{msg}}</p>
</div>
  {{/if}}
 {{#if errors}}
 <div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <h4 class="alert-heading">Warning!</h4>
   {{#each errors}}
  <p class="mb-0">{{msg}}</p>
  {{/each}}
</div>
{{/if}}
 <form action="/" method="POST">
 <div class="form-group" >
     <label for="title" class="col-sm-2 col-form-label row">Entre Task Title</label>
      <input type="text" name="title" class="form-control "  id="title" placeholder="Enter Task"  style="width: 20rem;">
    </div>
  <div class="form-group">
     <label for="desc" class="col-sm-2 col-form-label row"> Description </label>
       <textarea class="form-control" name="description" id="desc" rows="3" placeholder="Enter Description "></textarea> 
    </div> 
    <div class="col-sm-2 row">
     <input type="submit" class="btn btn-info" value="Add Task ">
    </div>
 </form>
  <div class="card-body mt-3">
{{#if data }}    
{{#each data }}
    <div class="jumbotron alert-info mt-3 ">
      <div class="form-check"> <label {{#ifeq status true}} style="text-decoration:line-through;" {{/ifeq}}  class="form-check-label"> <a href="/up/{{_id}}" ><input class="checkbox" type="checkbox" {{#ifeq status true}} checked='true' {{/ifeq}} > </a> {{title}}  
                    </label> <div class="float-right"> <i class="fa fa-chevron-down"     data-toggle="collapse" href="#collapse{{@key}}" role="button" aria-expanded="false" aria-controls="collapse{{@key}}">  </i> <a href='/del/{{_id}}' onclick=" return confirm('Are You Sure ?')"><i class="fa fa-trash" id="{{_id}}" ></i> </a> </div> <p  class="collapse mt-3" id="collapse{{@key}}">{{description}}</p></div> 
    </div>
    {{/each}}
{{else}}
    <h1> Todo List Is Empty </h1>
{{/if}}
</div>



